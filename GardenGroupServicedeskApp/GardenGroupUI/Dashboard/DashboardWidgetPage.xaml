<Page x:Class="GardenGroupUI.DashboardWidgetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GardenGroupUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="WidgetPage" Loaded="Page_Loaded" Height="300" VerticalAlignment="Top" Width="300" Margin="10,10,10,10">

    <StackPanel Background="Aquamarine">
        <DockPanel>
            <Label Content="Insert widget name"/>
            <Button x:Name="buttonCloseWidget" Content="X" HorizontalAlignment="Right" Margin="0,5,5,5" MinWidth="20" Padding="0,0,0,0" UseLayoutRounding="False" ScrollViewer.CanContentScroll="True" Click="buttonCloseWidget_Click"/>
        </DockPanel>
        <Frame Name="WidgetContent" 
                Source="{Binding}"
                NavigationUIVisibility="Hidden"/>
    </StackPanel>
</Page>
