<UserControl x:Class="GardenGroupUI.DashboardToolbarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GardenGroupUI"
             mc:Ignorable="d" d:DesignWidth="800" Height="40">
    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Background="AliceBlue">
        <Button x:Name="buttonAddWidget" Content="Add" Margin="5,5,5,5" Click="buttonAddWidget_Click"/>
        <Button x:Name="buttonRemoveWidget" Content="Remove" Margin="5,5,5,5"/>
        <Button x:Name="buttonMoveWidgets" Content="Move" Margin="5,5,5,5"/>
    </StackPanel>
</UserControl>
