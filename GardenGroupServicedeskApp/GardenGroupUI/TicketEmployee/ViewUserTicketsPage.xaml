<Page x:Class="GardenGroupUI.TicketEmployee.ViewUserTicketsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GardenGroupUI.TicketEmployee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewUserTicketsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ScrollViewer x:Name="ScrollTicketOverview">
           <Grid x:Name="GridTicketOverview" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="White">
               <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*" MaxWidth="150" MinWidth="50"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="1*" MinWidth="70"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0" Background="#FF9A9A9A"/>
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0" Background="#FF9A9A9A"/>
                <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0" Background="#FF9A9A9A"/>
                <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0" Background="#FF9A9A9A"/>
                <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black" BorderThickness="0,0,1,0" Background="#FF9A9A9A"/>
                <Border Grid.Row="0" Grid.Column="5" Background="#FF9A9A9A"/>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Deadline" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Subject" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="User" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Description" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="5,0,0,0"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Text="Date" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                <TextBlock Grid.Row="0" Grid.Column="5" Text="Status" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top"/>
            </Grid>
        </ScrollViewer>
        <Button Content="Refresh" x:Name="ButtonRefresh" Height="20" Width="80" Grid.Column="1" Margin="0,0,0,200" Click="ButtonRefresh_Click"/>
    </Grid>
</Page>
